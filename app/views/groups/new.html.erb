<div class="signup">
  <span><%= link_to 'Back', groups_path, class: 'btn-secound bg-second py-1 px-2 rounded text-white  font-semibold' %></span>
  <h1 class="my-4 text-xl font-extrabold text-text md:text-2xl lg:text-3xl">Create your Category here.</h1>
  <%= form_with model: @group, url: groups_path do |form| %>
    <div class="form-c">
      <%= form.label :name , "Name", class: 'text' %>
      <%= form.text_field :name, class: 'input-mid', required: true %>
    </div>
    <div class="form-group">
      <%= form.label :icon , "icon" , class: 'text' %>
      <%= form.text_field :icon, class: 'input-mid', required: true  %>
      <span class="text">You can use any image url here!.</span>
    </div>
    <%= form.submit "Save", class: 'btn-main' %>
  <% end %>
</div>
