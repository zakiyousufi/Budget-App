<div class="signup">
  <h1 class="h2">Edit your Category here.</h1>
  <%= form_with model: @entity, url: group_entity_path(@group), method: :PATCH do |form| %>
    <div class="form-group">
      <%= form.label :name , "Name", class: 'text' %>
      <%= form.text_field :name, class: 'input-mid' %>
    </div>
    <div class="form-group">
      <%= form.label :amount , "Price" , class: 'text' %>
      <%= form.text_field :amount, class: 'input-mid' %>
    </div>
    <%= form.submit "Post", class: 'btn-main' %>
  <% end %>
</div>
